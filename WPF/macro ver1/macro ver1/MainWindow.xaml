<Window x:Class="macro_ver1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:macro_ver1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MouseMove="Window_MouseMove">
    <Grid Loaded="Grid_Loaded">
        <TextBox x:Name="X" HorizontalAlignment="Left" Height="133" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="115,109,0,0"/>
        <TextBox x:Name="Y" HorizontalAlignment="Left" Height="133" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="286,109,0,0"/>
        <Label x:Name="Xlabel" Content="X : " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Label x:Name="Ylabel" Content="Y : " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,41,0,0"/>
    </Grid>
</Window>
